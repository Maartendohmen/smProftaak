<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:titleTextStyle">@style/CustomtextColor</item>
    </style>

    <style name="CustomtextColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomEditTextWhite" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

</resources>
