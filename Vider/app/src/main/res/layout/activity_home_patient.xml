<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePatientActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        android:textAlignment="center"
        app:titleTextColor="@android:color/white">



    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/imageViewLayout"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar">

        <ImageView
            android:id="@+id/imageViewHomePatient"
            android:layout_width="wrap_content"
            android:layout_height="257dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:layout_weight="1"

            app:srcCompat="@drawable/loginicon" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/darker_gray">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="125dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"

                android:layout_marginRight="1dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewHomePatientKlachtenInsturen"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/klachtinsturen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="125dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"

                android:layout_marginRight="1dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewHomePatientMijnKlachten"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/mijnklachten" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="125dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"

                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewHomePatientChattenMetDocter"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/chattenmetdokter" />
            </LinearLayout>


            <!--<Button-->
            <!--android:id="@+id/btnChatWithDocter"-->
            <!--android:layout_width="159dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/colorbutton"-->
            <!--android:onClick="chatWithDocter"-->
            <!--android:text="Chat with docter"-->
            <!--android:textColor="@android:color/white" />-->
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:background="@android:color/white"

                android:layout_marginTop="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/imageViewHomePatientMedicijnenBestellen"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/medicijnenbestellen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="vertical"
                android:background="@android:color/white"

                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/imageViewHomePatientInformatieOverKlachten"
                    android:layout_width="100dp"
                    android:layout_height="125dp"
                    android:layout_weight="1"

                    app:srcCompat="@mipmap/informatie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="124dp"
                android:layout_height="125dp"

                android:layout_marginBottom="0dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="vertical">

            </LinearLayout>
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>